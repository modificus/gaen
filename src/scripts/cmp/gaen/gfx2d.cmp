component Sprite
{
    asset #sprAsset = "/dummy.gspr";
    int sprite = $.sprite_create(sprAsset, transform);

    #init()
    {
        $.sprite_play_anim(sprite, #front_walk, 0.5, true, 0);
    }
}

component SpriteBody
{
    int #sprite = 0;
    float #mass = 0.0;

    // Collision group
    int #group = 0;

    // Collision masks
    int #mask0 = 0;
    int #mask1 = 0;
    int #mask2 = 0;
    int #mask3 = 0;
    int #mask4 = 0;
    int #mask5 = 0;
    int #mask6 = 0;
    int #mask7 = 0;

    #init()
    {
        if (sprite != 0)
            $.sprite_init_body(sprite,
                               mass,
                               group,
                               ivec4{mask0, mask1, mask2, mask3},
                               ivec4{mask4, mask5, mask6, mask7});
    }
}
