component Timer
{
    float #interval = 0.0;          // interval in seconds to send the timer message
    uint #payload = 0;              // payload to send with each message, useful if multiple timers are used in the same component

    float last_notification = 0.0;

    #update(float deltaSecs)
    {
        if (interval > 0.0)
        {
            last_notification += deltaSecs;
            if (last_notification >= interval)
            {
                @:#timer(payload);
                last_notification = 0.0;
            }
        }
    }
}
