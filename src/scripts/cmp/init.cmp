entity Light
{
    components
    {
        gaen.lights.Directional{dir = vec3{1.2, -0.7, -0.5},
                                col = color{50, 50, 50, 255}}
    }
}

entity Camera
{
    components
    {
        gaen.utils.WasdCamera{}
    }
}

entity Start
{
    #init()
    {
        entity cam = Camera{};
        entity light = Light{};
        entity shape = Shape{};
    }
}
