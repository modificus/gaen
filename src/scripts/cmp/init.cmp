entity Box
{
    components
    {
        shapes.Box{size    = vec3{2.0, 2.0, 2.0},
                   diffuse = color{255, 255, 0, 255}};
        utils.WasdRot{};        
    }
}

entity Light
{
    components
    {
        lights.Directional{};
    }
}

entity start
{
    components
    {
        utils.Timer{timer_interval = 0.016,
                    timer_message  = #tick};
    }

    #init()
    {
        entity box = Box{};
        entity light = Light{};

        $.insert_task(box);
        $.insert_task(light);
    }

    #timer(uint timer_msg)
    {
        if (timer_msg == #tick)
        {
        }
    }
}
