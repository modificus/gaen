entity Box
{
    components
    {
        shapes.Box{size    = vec3{3.0, 2.0, 1.0},
                   diffuse = color{255, 255, 0, 255}};
        utils.WasdRot{};        
    }
}

entity Light
{
    components
    {
        lights.Directional{};
    }
}

entity start
{
    #init()
    {
        $.print($.hashstr(#this_isATEST));
        string s = string{"float: %0.2f, int: %d, and make sure we're larger than one block", 1.2, 10};

        entity t = test.Test{prop1 = 500, prop2 = "new value"};
        $.insert_task(t);

/*
        @t#prop1 = 5;
        @t#prop2 = s;
        
        @t#msg1(5, s, "a short one", 1.2, vec3{1.0, 2.0, 3.0}, "this is another string that is larger than one block, and then some more");
*/

        entity box = Box{};
        entity light = Light{};

        $.insert_task(box);
        $.insert_task(light);
    }
}
