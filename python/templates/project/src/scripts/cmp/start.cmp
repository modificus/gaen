
entity Box
{
    components
    {
        gaen.shapes.Box{size    = vec3{3.0, 2.0, 1.0},
                        diffuse = color{255, 255, 0, 255}};
        gaen.utils.WasdRot{};
    }
}

entity Light
{
    components
    {
        gaen.lights.Directional{};
    }
}

entity start
{
    #init()
    {
        entity box = Box{};
        entity light = Light{};

        $.insert_task(box);
        $.insert_task(light);
    }
}
